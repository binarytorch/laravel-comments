{
    "name": "binarytorch/comments",
    "description": "Internal comments package",
    "keywords": [
        "binarytorch",
        "comments"
    ],
    "homepage": "https://github.com/binarytorch/comments",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Saleem Hadad",
            "email": "saleem@binarytorch.com.my",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "5.5.*|5.6.*|5.7.*|5.8.*"
    },
    "require-dev": {
        "orchestra/testbench": "3.8.*",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "BinaryTorch\\Comments\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinaryTorch\\Comments\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BinaryTorch\\Comments\\CommentsServiceProvider"
            ]
        }
    }
}
